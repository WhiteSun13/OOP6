<Window x:Class="OOP6_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP6_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600">
    <Grid>
        <StackPanel Margin="10" Panel.ZIndex="0">
            <TextBlock Text="Введите первое число:" Margin="0,0,0,5"/>
            <TextBox x:Name="FirstNumberTextBox" Margin="0,0,0,5" Height="25"/>
            <TextBlock Text="Введите второе число:" Margin="0,0,0,5"/>
            <TextBox x:Name="SecondNumberTextBox" Margin="0,0,0,5" Height="25"/>
            <Button x:Name="AddButton" Content="Сложить" Click="AddButton_Click" Margin="0,0,0,5" Height="25"/>
            <Button x:Name="SubtractButton" Content="Вычесть" Click="SubtractButton_Click" Margin="0,0,0,5" Height="25"/>
            <Button x:Name="MultiplyButton" Content="Умножить" Click="MultiplyButton_Click" Margin="0,0,0,5" Height="25"/>
            <TextBlock Text="Результат:" Margin="0,0,0,5"/>
            <Label x:Name="ResultLabel"/>
        </StackPanel>
    </Grid>
</Window>
